#hints are width then height
#left top right bottom
#hotizontal vertical

<Login>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50, 0, 50, 300]
        BoxLayout:
            GridLayout:
                size_hint: (.8, .3)
                cols: 2
                Label:
                    size_hint: (0.4, 1)
                    text_size: self.size
                    text: 'Facebook Email'
                    halign: 'right'
                    valign: 'middle'
                    padding_x: 10
                TextInput:
                    id: login
                    hint_text: 'your@email.com'
                    multiline: False
                Label:
                    size_hint: (0.4, 1)
                    text_size: self.size
                    text: 'Facebook Password'
                    halign: 'right'
                    valign: 'middle'
                    padding_x: 10
                TextInput:
                    id: password
                    password: True
                    multiline: False
            Button:
                size_hint: (.2, .3)
                text: 'Login'
                color: (40, 120, 230, 1)
                on_press: root.do_login(login.text, password.text)
        Label:
            opacity: 0
            id: fail
            size_hint: (1, .2)
            text: 'Failed to login. Check your credentials and try again.'

<Settings>:
    BoxLayout:
        orientation: 'vertical'
        padding: [50]*4
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                size_hint: (0.8, 1)
                orientation: 'vertical'
                Label:
                    size_hint: (1, 0.2)
                    text_size: self.size
                    text: 'Facebook Targets (<Enter> separated)'
                    valign: 'bottom'
                TextInput:
                    id: names
                    size_hint: (1, 0.8)
                    hint_text: 'https://www.facebook.com/someuser\nsomeusername\nsomeprofileidnumber'
            Button:
                size_hint: (0.2, 0.8)
                text: 'Start Scrape'
                on_press: root.do_scrape(names.text)


<Logging>:
    BoxLayout:
        ScrollView:
            Label:
                id: logtext
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
